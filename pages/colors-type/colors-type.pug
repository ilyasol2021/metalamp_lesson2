include ../../blocks/head/head
include ../../blocks/logo/logo
doctype html
html(lang="ru")
  +head("colors-type")
  body
    .main.main_color_white
      +logo("main","wb")
      ul.container.container_colors-type
        ul.container.container__colors-column
          - var i= 1
          each val in [{name: "dark-shade-100",h2: "Dark Shade 100%", hex: "#1F2041"}, {name: "dark-shade-75",h2: "Dark Shade 75%", hex: "#1F2041"}, {name: "dark-shade-50",h2: "Dark Shade 50%", hex: "#1F2041"}, {name: "dark-shade-25",h2: "Dark Shade 25%", hex: "#1F2041"}, {name: "dark-shade-5",h2: "Dark Shade 5%", hex: "#1F2041"}, {name: "purple", h2: "Purple", hex: "#BC9CFF"}, {name: "green", h2: "Green", hex: "#6FCF97"}]
            li.container__colors-items
              .container__colors-items_box(class="bg-colors_"+ val.name)
              .container__colors-items_text
                h2.text.text_h2= val.h2
                p.text.text_h2.text_hex= val.hex
        ul.container.container__type-column
          li.container__type-items_type.colors_dark-shade-100
